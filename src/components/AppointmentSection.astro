<section class="py-20 bg-white">
  <div class="container mx-auto px-4">
    <div class="max-w-3xl mx-auto bg-white p-12 rounded-lg shadow-xl">
      <p class="text-secondary text-center text-xl mb-4">Exceeding your expectations, consistently</p>
      <h2 class="text-4xl font-bold text-center mb-8">Make an Appointment Today!</h2>
      
      <form class="space-y-6">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <input
              type="text"
              placeholder="First Name"
              class="w-full px-4 py-3 border border-gray-300 rounded-md focus:ring-2 focus:ring-secondary focus:border-transparent"
              required
            />
          </div>
          <div>
            <input
              type="text"
              placeholder="Last Name"
              class="w-full px-4 py-3 border border-gray-300 rounded-md focus:ring-2 focus:ring-secondary focus:border-transparent"
              required
            />
          </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <input
              type="email"
              placeholder="Email Address"
              class="w-full px-4 py-3 border border-gray-300 rounded-md focus:ring-2 focus:ring-secondary focus:border-transparent"
              required
            />
          </div>
          <div>
            <input
              type="tel"
              placeholder="Phone"
              class="w-full px-4 py-3 border border-gray-300 rounded-md focus:ring-2 focus:ring-secondary focus:border-transparent"
              required
            />
          </div>
        </div>

        <div>
          <select
            class="w-full px-4 py-3 border border-gray-300 rounded-md focus:ring-2 focus:ring-secondary focus:border-transparent"
            required
          >
            <option value="" disabled selected>Services</option>
            <option value="foundation-inspection">Foundation Inspection</option>
            <option value="crack-repair">Crack Repair</option>
            <option value="underpinning">Underpinning</option>
            <option value="waterproofing">Waterproofing</option>
            <option value="slab-leveling">Slab Leveling</option>
          </select>
        </div>

        <div>
          <textarea
            placeholder="Message"
            rows="4"
            class="w-full px-4 py-3 border border-gray-300 rounded-md focus:ring-2 focus:ring-secondary focus:border-transparent"
            required
          ></textarea>
        </div>

        <div class="flex justify-end">
          <button
            type="submit"
            class="bg-secondary hover:bg-secondary-light text-white px-8 py-3 rounded-md transition-colors duration-300"
          >
            Submit
          </button>
        </div>
      </form>

      <div class="mt-8 bg-secondary/10 p-6 rounded-lg text-center">
        <p class="text-lg">
          Call <span class="font-bold">(815) 555-5555</span> or go online to make an appointment for a
          foundation repair service or to get a free price quote.
        </p>
        <a
          href="/contact"
          class="inline-block mt-4 bg-yellow-200 hover:bg-yellow-300 text-secondary px-6 py-2 rounded-md transition-colors duration-300"
        >
          Make an Appointment
        </a>
      </div>
    </div>
  </div>
</section>