---
import Layout from '../layouts/Layout.astro';
import ContactForm from '../components/ContactForm.astro';

const suburbs = [
  // North Adelaide
  { region: 'North Adelaide', suburbs: ['Prospect', 'Walkerville', 'Medindie', 'North Adelaide', 'Thorngate', 'Fitzroy'] },
  
  // Eastern Suburbs
  { region: 'Eastern Suburbs', suburbs: ['Norwood', 'Burnside', 'Toorak Gardens', 'Rose Park', 'Dulwich', 'Kensington', 'Magill', 'Tranmere'] },
  
  // Western Suburbs
  { region: 'Western Suburbs', suburbs: ['Henley Beach', 'Grange', 'West Lakes', 'Semaphore', 'Port Adelaide', 'Woodville', 'Findon'] },
  
  // Southern Suburbs
  { region: 'Southern Suburbs', suburbs: ['Unley', 'Mitcham', 'Blackwood', 'Brighton', 'Glenelg', 'Marion', 'Morphett Vale', 'Hallett Cove'] },
  
  // Inner City
  { region: 'Inner City', suburbs: ['Adelaide CBD', 'Kent Town', 'Hackney', 'St Peters', 'College Park', 'Stepney'] },
  
  // Hills
  { region: 'Adelaide Hills', suburbs: ['Stirling', 'Aldgate', 'Bridgewater', 'Mount Barker', 'Hahndorf', 'Crafers', 'Belair'] }
];

const features = [
  {
    icon: 'ðŸ ',
    title: 'Local Expertise',
    description: 'Deep knowledge of Adelaide\'s foundation conditions'
  },
  {
    icon: 'âš¡',
    title: 'Fast Response',
    description: 'Quick service across all Adelaide suburbs'
  },
  {
    icon: 'ðŸ› ï¸',
    title: 'Full Coverage',
    description: 'Comprehensive services throughout the region'
  }
];

// Function to convert suburb name to URL-friendly slug
const toSlug = (suburb: string) => suburb.toLowerCase().replace(/\s+/g, '-');
---

<Layout 
  title="Service Areas - Foundation Repair Adelaide"
  description="Expert foundation repair services available across all Adelaide suburbs. Find professional foundation solutions in your local area."
>
  <!-- Hero Section -->
  <section class="relative h-[400px] flex items-center">
    <div class="absolute inset-0 z-0">
      <img 
        src="https://images.unsplash.com/photo-1449034446853-66c86144b0ad?auto=format&fit=crop&q=80&w=2070"
        alt="Adelaide Suburbs"
        class="w-full h-full object-cover brightness-50"
      />
    </div>
    <div class="container mx-auto px-4 relative z-10">
      <div class="max-w-3xl">
        <h1 class="text-5xl font-bold text-white mb-6">Adelaide Service Areas</h1>
        <p class="text-xl text-white/90">
          Professional foundation repair services available throughout Adelaide and surrounding suburbs.
        </p>
        <div class="mt-8">
          <a 
            href="#get-quote"
            class="inline-block bg-secondary hover:bg-secondary-light text-white px-8 py-4 rounded-md font-bold transition-colors duration-300"
          >
            Get Free Quote
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section class="py-16 bg-white">
    <div class="container mx-auto px-4">
      <div class="grid md:grid-cols-3 gap-8">
        {features.map(feature => (
          <div class="text-center p-8 rounded-lg bg-neutral-light hover:shadow-lg transition-shadow duration-300">
            <div class="text-4xl mb-4">{feature.icon}</div>
            <h3 class="text-xl font-bold text-primary mb-2">{feature.title}</h3>
            <p class="text-neutral">{feature.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Service Areas Grid -->
  <section class="py-16 bg-neutral-light">
    <div class="container mx-auto px-4">
      <div class="text-center mb-12">
        <h2 class="text-4xl font-bold text-primary mb-4">Areas We Serve</h2>
        <p class="text-xl text-neutral-medium">Find expert foundation repair services in your suburb</p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {suburbs.map(({ region, suburbs }) => (
          <div class="bg-white p-8 rounded-lg shadow-sm hover:shadow-lg transition-shadow duration-300">
            <h3 class="text-2xl font-bold text-primary mb-6 flex items-center gap-2">
              <span class="text-secondary">â€¢</span>
              {region}
            </h3>
            <ul class="space-y-3">
              {suburbs.map(suburb => (
                <li>
                  <a 
                    href={`/suburbs/${toSlug(suburb)}`}
                    class="flex items-center gap-2 text-neutral hover:text-secondary transition-colors duration-300"
                  >
                    <svg class="w-4 h-4 text-secondary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                    </svg>
                    {suburb}
                  </a>
                </li>
              ))}
            </ul>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Rest of the sections remain unchanged -->
  <!-- ... -->

</Layout>