---
import type { Section } from "../../config/content/home-sections/types";
import Image from "../common/Image.astro";

interface Props {
  section: Section;
}

const { section } = Astro.props;
const {
  heading,
  headingLevel = 2,
  content,
  image,
  imagePosition = "left",
  background = "white",
  showCta = false,
  ctaText,
  ctaPhone,
} = section;

const bgColors = {
  white: "bg-white",
  light: "bg-neutral-light",
  primary: "bg-primary text-white",
};

const HeadingTag = `h${headingLevel}` as keyof HTMLElementTagNameMap;
---

<section class={`py-20 ${bgColors[background]}`}>
  <div class="container mx-auto px-4">
    <div
      class={`grid lg:grid-cols-2 gap-12 items-center ${
        image && imagePosition === "right" ? "lg:grid-flow-dense" : ""
      }`}
    >
      {
        image && (
          <div class="relative">
            <Image
              src={image.src}
              alt={image.alt}
              className="rounded-lg shadow-xl w-full h-[400px] object-cover"
            />
          </div>
        )
      }

      <div
        class={`space-y-6 ${!image ? "lg:col-span-2 max-w-3xl mx-auto text-center" : ""}`}
      >
        <HeadingTag
          class={`text-3xl font-bold ${background === "primary" ? "text-white" : "text-primary"}`}
        >
          {heading}
        </HeadingTag>

        {
          content.map((paragraph) => (
            <p
              class={`text-lg leading-relaxed ${
                background === "primary" ? "text-white/90" : "text-neutral-600"
              }`}
            >
              {paragraph}
            </p>
          ))
        }

        {
          showCta && (
            <div class="pt-4 flex flex-col items-center gap-4">
              <a
                href="/contatti"
                class={`inline-flex items-center gap-2 ${
                  background === "primary"
                    ? "bg-white text-primary hover:bg-neutral-light"
                    : "bg-primary hover:bg-primary-light text-white"
                } px-6 py-3 rounded-md transition-colors duration-300`}
              >
                {ctaText || "Contact Us"}
              </a>
              {ctaPhone && (
                <p
                  class={`text-lg ${
                    background === "primary" ? "text-white" : "text-neutral-600"
                  }`}
                >
                  Call us at:{" "}
                  <a href={`tel:${ctaPhone}`} class="font-bold">
                    {ctaPhone}
                  </a>
                </p>
              )}
            </div>
          )
        }
      </div>
    </div>
  </div>
</section>
