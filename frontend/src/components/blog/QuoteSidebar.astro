---
import ContactForm from '../ContactForm.astro';
---

<div class="space-y-8">
  <!-- Get a Quote Section -->
  <div class="bg-primary text-white p-8 rounded-lg">
    <h3 class="text-2xl font-bold mb-6">Get a Free Quote</h3>
    <ContactForm />
  </div>

  <!-- Categories Section -->
  <div class="bg-white p-8 rounded-lg shadow-lg">
    <h3 class="text-xl font-bold mb-6">Categories</h3>
    <ul class="space-y-3">
      <li>
        <a href="/blog/category/foundation-tips" class="flex items-center justify-between text-neutral hover:text-secondary transition-colors duration-300">
          Foundation Tips
          <span class="bg-gray-100 px-2 py-1 rounded-full text-sm">12</span>
        </a>
      </li>
      <li>
        <a href="/blog/category/repair-guides" class="flex items-center justify-between text-neutral hover:text-secondary transition-colors duration-300">
          Repair Guides
          <span class="bg-gray-100 px-2 py-1 rounded-full text-sm">8</span>
        </a>
      </li>
      <li>
        <a href="/blog/category/maintenance" class="flex items-center justify-between text-neutral hover:text-secondary transition-colors duration-300">
          Maintenance
          <span class="bg-gray-100 px-2 py-1 rounded-full text-sm">15</span>
        </a>
      </li>
    </ul>
  </div>

  <!-- Recent Posts Section -->
  <div class="bg-white p-8 rounded-lg shadow-lg">
    <h3 class="text-xl font-bold mb-6">Recent Posts</h3>
    <div class="space-y-6">
      {[1, 2, 3].map(i => (
        <a href={`/blog/post-${i}`} class="flex gap-4 group">
          <img
            src={`https://images.unsplash.com/photo-${1570129477492 + i}?auto=format&fit=crop&q=80&w=100`}
            alt={`Recent Post ${i}`}
            class="w-20 h-20 object-cover rounded"
          />
          <div>
            <h4 class="font-semibold group-hover:text-secondary transition-colors duration-300">
              Foundation Repair Tips {i}
            </h4>
            <p class="text-sm text-neutral-medium">January {i}, 2024</p>
          </div>
        </a>
      ))}
    </div>
  </div>
</div>