---
import { homePageContent } from "../config/content";

const { foundationInfo } = homePageContent;
---

<section class="py-20 bg-white">
  <div class="container mx-auto px-4">
    <div class="grid lg:grid-cols-2 gap-12 items-center">
      <div class="relative">
        <img
          src="https://images.unsplash.com/photo-1541123437800-1bb1317badc2?auto=format&fit=crop&q=80&w=2070"
          alt="Foundation Repair Work"
          class="rounded-lg shadow-xl w-full h-[400px] object-cover"
        />
        <div
          class="absolute -bottom-6 -right-6 bg-white p-6 rounded-lg shadow-lg"
        >
          <div class="text-4xl font-bold text-primary">
            {foundationInfo.stats.years}
          </div>
          <div class="text-neutral">{foundationInfo.stats.label}</div>
        </div>
      </div>

      <div class="space-y-6">
        <h2 class="text-3xl font-bold text-primary">{foundationInfo.title}</h2>

        {
          foundationInfo.description.map((paragraph) => (
            <p class="text-lg text-neutral-600 leading-relaxed">{paragraph}</p>
          ))
        }

        <div class="pt-4">
          <a
            href="/contatti"
            class="inline-flex items-center gap-2 bg-primary hover:bg-primary-light text-white px-6 py-3 rounded-md transition-colors duration-300"
          >
            Schedule an Inspection
            <svg
              class="w-5 h-5"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </div>
</section>
